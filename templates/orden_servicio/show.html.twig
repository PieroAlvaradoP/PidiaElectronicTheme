{% extends 'base.html.twig' %}
{% import 'macro/breadcrumb.html.twig' as breadcrumb %}
{% import 'macro/action.html.twig' as action %}

{% set _title = 'Orden' %}
{% set _main_title = 'Mostrar' %}
{% set _section =  'orden_servicio_index'%}

{% block _breadcrumb %}
    {{ breadcrumb.show2(_title, _section, 'Mostrar') }}
{% endblock %}

{% block _main %}
    {{ action.tbl_start() }}
    {{ action.tbl_tr('Numero de Orden',orden_servicio.numeroOrden) }}
    {{ action.tbl_tr('Cliente',orden_servicio.clienteOrden) }}
    {{ action.tbl_tr('Tecnico',orden_servicio.tecnicoOrden) }}
    {{ action.tbl_tr('Fecha de Ingreso',orden_servicio.fechaIngreso) }}
    {{ action.tbl_tr('Fecha de Salida',orden_servicio.fechaSalida) }}
    {{ action.tbl_tr('Equipo',orden_servicio.equipo) }}
{#    {{ action.tbl_tr('Estado',orden_servicio.nombreEquipo) }}#}
    <tr>
        <th>Estado</th>
        <td>
            {% for estado in orden_servicio.estadoOrden %}
                {{ estado }},
            {% endfor %}
        </td>
    </tr>
    {{ action.tbl_tr('Precio',orden_servicio.Precio) }}
    {% include 'crud/_show_info.html.twig' with {'entity': orden_servicio} %}
    {{ action.tbl_end() }}

{% endblock %}

{% block _main_footer %}
    {% include 'crud/_show_links.html.twig' with {'route_base':'orden_servicio','entity': orden_servicio} %}
{% endblock %}

{% block _main_tools %}
    {% include 'crud/_tools_ico.html.twig' %}
{% endblock %}

{% block _body_tools %}
    {% include 'crud/_show_links_ico.html.twig' with {'route_base':'orden_servicio','entity': orden_servicio} %}
{% endblock %}

{% block _body_tools_ico %}
    {% include 'crud/_show_links_tool.html.twig' with {'route_base':'orden_servicio','entity': orden_servicio} %}
{% endblock %}

